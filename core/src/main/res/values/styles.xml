<resources>

    <!-- TextAppearance -->

    <style name="TextAppearance.Chip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/TextAppearance.Chip</item>
        <item name="chipMinTouchTargetSize">40dp</item>
    </style>

    <style name="Widget.Chip.Genre">
        <item name="android:textColor">@color/chip_genre_text</item>
        <item name="chipBackgroundColor">@color/chip_genre_bg</item>
        <item name="rippleColor">@color/grey_400</item>
    </style>

    <style name="Widget.Chip.Cgv">
        <item name="android:textColor">@color/chip_cgv_text</item>
        <item name="chipBackgroundColor">@color/chip_cgv_bg</item>
        <item name="chipStrokeColor">#229E9E9E</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="rippleColor">@color/grey_400</item>
    </style>

    <style name="Widget.Chip.Lotte">
        <item name="android:textColor">@color/chip_lotte_text</item>
        <item name="chipBackgroundColor">@color/chip_lotte_bg</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="Widget.Chip.Megabox">
        <item name="android:textColor">@color/chip_megabox_text</item>
        <item name="chipBackgroundColor">@color/chip_megabox_bg</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="Widget.Chip.Naver">
        <item name="android:textColor">@color/chip_naver_text</item>
        <item name="chipBackgroundColor">@color/chip_naver_bg</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="Widget.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textAppearance">@style/TextAppearance.Chip</item>
        <item name="chipMinTouchTargetSize">40dp</item>
    </style>

    <style name="Widget.Chip.Filter.Genre">
        <item name="android:textColor">@color/selector_chip_genre_text</item>
        <item name="checkedIcon">@drawable/ic_check_genre</item>
        <item name="chipBackgroundColor">@color/selector_chip_genre_bg</item>
        <item name="chipIcon">@drawable/ic_logo_genre</item>
        <item name="rippleColor">@color/grey_400</item>
    </style>

    <style name="Widget.FilterChip" parent="">
        <item name="android:minHeight">32dp</item>
        <item name="horizontalPadding">10dp</item>
        <item name="verticalPadding">6dp</item>
        <item name="showIcons">true</item>
        <item name="android:textColor">@color/chip_cgv_text_unchecked</item>
        <item name="selectedTextColor">@color/chip_lotte_text</item>
        <item name="android:textSize">14sp</item>
        <item name="dotColor">@color/chip_cgv_bg</item>
        <item name="dotSize">10dp</item>
        <item name="dotPadding">7dp</item>
        <item name="clearIcon">@drawable/filter_chip_cancel</item>
        <item name="backgroundColor">@color/chip_genre_bg_unchecked</item>
        <item name="foreground">?selectableItemBackground</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="Widget.FilterChip.Cgv">
        <item name="android:textColor">@color/chip_unchecked_text</item>
        <item name="selectedTextColor">@color/chip_cgv_text</item>
        <item name="android:textSize">14sp</item>
        <item name="dotColor">@color/chip_cgv_bg</item>
        <item name="dotSize">10dp</item>
        <item name="dotPadding">7dp</item>
        <item name="fontFamily">bold</item>
        <item name="clearIcon">@drawable/filter_chip_cgv_cancel</item>
        <item name="backgroundColor">@color/chip_unchecked_bg</item>
        <item name="foreground">?selectableItemBackground</item>
    </style>

    <style name="Widget.FilterChip.Lotte">
        <item name="android:textColor">@color/chip_unchecked_text</item>
        <item name="selectedTextColor">@color/chip_lotte_text</item>
        <item name="android:textSize">14sp</item>
        <item name="dotColor">@color/chip_lotte_bg</item>
        <item name="dotSize">10dp</item>
        <item name="dotPadding">7dp</item>
        <item name="clearIcon">@drawable/filter_chip_lotte_cancel</item>
        <item name="backgroundColor">@color/chip_unchecked_bg</item>
        <item name="foreground">?selectableItemBackground</item>
    </style>

    <style name="Widget.FilterChip.Megabox">
        <item name="android:textColor">@color/chip_unchecked_text</item>
        <item name="selectedTextColor">@color/chip_megabox_text</item>
        <item name="android:textSize">14sp</item>
        <item name="dotColor">@color/chip_megabox_bg</item>
        <item name="dotSize">10dp</item>
        <item name="dotPadding">7dp</item>
        <item name="clearIcon">@drawable/filter_chip_megabox_cancel</item>
        <item name="backgroundColor">@color/chip_unchecked_bg</item>
        <item name="foreground">?selectableItemBackground</item>
    </style>

</resources>
