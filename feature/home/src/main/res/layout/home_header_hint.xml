<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    tools:visibility="visible">

    <View
        android:id="@+id/hintButton"
        android:layout_width="108dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hintLabel"
        android:layout_width="0dp"
        android:layout_height="@dimen/home_header_hint_height"
        android:background="@drawable/bg_button_home_hint"
        android:drawableStart="@drawable/ic_round_arrow_drop_up"
        android:drawableTint="?colorOnSurface"
        android:elevation="12dp"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/menu_now"
        android:textColor="?colorOnSurface"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/hintButton"
        app:layout_constraintEnd_toEndOf="@id/hintButton"
        app:layout_constraintStart_toStartOf="@id/hintButton"
        app:layout_constraintTop_toTopOf="@id/hintButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
